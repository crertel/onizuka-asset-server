<h1 class="col-xs-12">
  Listing assets <%= link_to 'New Asset', new_asset_path, class: "btn btn-info"  %>
</h1>
<div class="col-xs-12">
  <div class="list-group">
    <% @assets.each do |asset| %>
      <%= link_to asset, class: "list-group-item"  do %>
        <h4><%= asset.display_name %></h4>
        <p><i><%= asset.content_type %></i></p>
        <p><%= asset.description %></p>
        <p>
          <% asset.tags.each do |tag| %>
            <span class="label label-default">
              #<%= tag %>
            </span>
          <% end %>
        </p>

      <% end %>

      <div class="btn-group corner-btns">
        <%= link_to 'Show', asset, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_asset_path(asset), class: "btn btn-default" %>
        <%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
      </div>

    <% end %>

  </div>
</div>
